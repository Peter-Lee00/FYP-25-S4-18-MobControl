<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7">

    <!-- Gyro Bar (상단) -->
    <RelativeLayout
        android:id="@+id/gyroBarContainer"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="#2a2a2a"
        android:elevation="4dp"
        android:visibility="gone">

        <View
            android:id="@+id/leftGyroBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#4CAF50"/>

        <View
            android:id="@+id/rightGyroBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#4CAF50"/>

        <TextView
            android:id="@+id/gyroAngleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0.0°"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gyroStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="GYRO"
            android:textColor="#4CAF50"
            android:textSize="10sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Main Controller Container -->
    <RelativeLayout
        android:id="@+id/controllerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gyroBarContainer" />

    <!-- ✅ 중앙 세로 컨테이너 (gyro bar 바로 아래) -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyroBarContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="#80000000"
        android:elevation="10dp">

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- Options Button -->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#616161"
            android:scaleType="fitCenter"
            android:contentDescription="Menu"
            android:layout_marginBottom="8dp"/>

        <!-- Calibrate Button -->
        <Button
            android:id="@+id/calibrateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALIBRATE"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#FF9800"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>