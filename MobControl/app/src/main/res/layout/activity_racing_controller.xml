<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/controller_background"
    android:padding="16dp">

    <!-- Gyroscope Bar at Top -->
    <RelativeLayout
        android:id="@+id/gyroBarContainer"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="#2a2a2a"
        android:elevation="4dp">

        <!-- Left Bar (Left Tilt) -->
        <View
            android:id="@+id/leftGyroBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#FF5722"/>

        <!-- Center Divider -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"/>

        <!-- Right Bar (Right Tilt) -->
        <View
            android:id="@+id/rightGyroBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FF5722"/>

        <!-- Angle Text (Center) -->
        <TextView
            android:id="@+id/gyroAngleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0.0°"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Top Shoulder Buttons Row - Space 제거 -->
    <LinearLayout
        android:id="@+id/topButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyroBarContainer"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Left Shoulder Buttons (Hidden) -->
        <LinearLayout
            android:id="@+id/leftShoulderButtons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/lbButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/ltButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </LinearLayout>

        <!-- Right Shoulder Buttons (Hidden) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/rbButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/rtButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Center Buttons (Floating Overlay) - Space 없이 독립적 배치 -->
    <LinearLayout
        android:id="@+id/centerButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topButtonsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#88000000"
        android:padding="8dp"
        android:elevation="10dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Connected"
            android:textColor="#BBBBBB"
            android:textSize="9sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/gyroStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="GYRO ON"
            android:textColor="#4CAF50"
            android:textSize="8sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/center_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/center_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/center_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_options" />
    </LinearLayout>

    <!-- Main Controller Area - 화면 거의 전체 사용 -->
    <RelativeLayout
        android:id="@+id/mainControllerArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/topButtonsLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp">

        <!-- Left Side: Brake Button -->
        <Button
            android:id="@+id/brakeButton"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#D32F2F"
            android:elevation="4dp"
            android:gravity="center"
            android:lineSpacingExtra="14dp"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Right Side: Accelerator Button -->
        <Button
            android:id="@+id/acceleratorButton"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:gravity="center"
            android:lineSpacingExtra="14dp"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Hidden D-Pad Layout -->
        <RelativeLayout
            android:id="@+id/dpadLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/upButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/downButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/leftButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageButton
                android:id="@+id/rightButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </RelativeLayout>

        <!-- Hidden Action Buttons -->
        <RelativeLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone">

            <Button
                android:id="@+id/actionYButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/actionBButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/actionAButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/actionXButton"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Hidden Settings Button -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <!-- Hidden arrows (for compatibility) -->
    <TextView
        android:id="@+id/leftArrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rightArrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>


    <!-- Joystick Container -->
    <RelativeLayout
        android:id="@+id/joystickContainer"
        android:layout_width="420dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <!-- Mouse Click Buttons at BOTTOM of Container (below joystick) -->
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:background="#2a2a2a"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/leftClickButton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginEnd="4dp"
                android:background="#FF5722"
                android:text="L"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rightClickButton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="#FF5722"
                android:text="R"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Joystick will be added here by code at center -->
    </RelativeLayout>

</RelativeLayout>