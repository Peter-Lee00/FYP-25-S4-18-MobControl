<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gaming_background">

    <!-- Gyro Bar Preview -->
    <RelativeLayout
        android:id="@+id/gyroBarPreview"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gyro_bar_bg"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0.0°"
            android:textColor="#00E5FF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="monospace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="GYRO PREVIEW"
            android:textColor="#B388FF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"/>
    </RelativeLayout>

    <!-- Edit Container -->
    <RelativeLayout
        android:id="@+id/editContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gyroBarPreview"
        android:background="@android:color/transparent" />

    <!-- Floating Menu Button (Neon Style) -->
    <RelativeLayout
        android:id="@+id/fabMenu"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fab_button_bg"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="☰"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>