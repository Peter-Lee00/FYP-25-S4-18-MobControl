<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/dpad_combined.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 배경 원 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#2a2a2a" />
            <stroke android:width="3dp" android:color="#424242" />
        </shape>
    </item>
    
    <!-- 중앙 십자가 -->
    <item 
        android:top="70dp" 
        android:bottom="70dp" 
        android:left="60dp" 
        android:right="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#616161" />
        </shape>
    </item>
    
    <item 
        android:left="70dp" 
        android:right="70dp" 
        android:top="60dp" 
        android:bottom="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#616161" />
        </shape>
    </item>
    
    <!-- 중앙 점 -->
    <item 
        android:top="85dp" 
        android:bottom="85dp" 
        android:left="85dp" 
        android:right="85dp">
        <shape android:shape="oval">
            <solid android:color="#9E9E9E" />
        </shape>
    </item>
    
</layer-list>
