<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/abxy_combined.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 외부 큰 원 (컨테이너) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#2A2A3A" />
            <stroke
                android:width="4dp"
                android:color="#1A1A2A" />
        </shape>
    </item>

    <!-- 십자가 패턴 (선택적) -->
    <item android:top="90dp" android:bottom="90dp" android:left="70dp" android:right="70dp">
        <shape android:shape="rectangle">
            <solid android:color="#3A3A4A" />
        </shape>
    </item>

    <item android:left="90dp" android:right="90dp" android:top="70dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <solid android:color="#3A3A4A" />
        </shape>
    </item>
</layer-list>