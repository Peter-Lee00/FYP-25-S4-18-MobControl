<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/dpad_combined_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 배경 원 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#3a3a3a" />
            <stroke android:width="3dp" android:color="#757575" />
        </shape>
    </item>

    <!-- 십자가 (가로) -->
    <item
        android:top="85dp"
        android:bottom="85dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#9E9E9E" />
        </shape>
    </item>

    <!-- 십자가 (세로) -->
    <item
        android:top="40dp"
        android:bottom="40dp"
        android:left="85dp"
        android:right="85dp">
        <shape android:shape="rectangle">
            <solid android:color="#9E9E9E" />
        </shape>
    </item>

    <!-- 중앙 원 -->
    <item
        android:top="75dp"
        android:bottom="75dp"
        android:left="75dp"
        android:right="75dp">
        <shape android:shape="oval">
            <solid android:color="#616161" />
        </shape>
    </item>

</layer-list>