<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/dpad_combined_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 외부 원 -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="#FFFFFF" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- 위쪽 화살표 ↑ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
        <inset
            android:insetLeft="85dp"
            android:insetTop="30dp"
            android:insetRight="85dp"
            android:insetBottom="130dp" />
    </item>
    
    <!-- 아래쪽 화살표 ↓ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
        <inset
            android:insetLeft="85dp"
            android:insetTop="130dp"
            android:insetRight="85dp"
            android:insetBottom="30dp" />
    </item>
    
    <!-- 왼쪽 화살표 ← -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
        <inset
            android:insetLeft="30dp"
            android:insetTop="85dp"
            android:insetRight="130dp"
            android:insetBottom="85dp" />
    </item>
    
    <!-- 오른쪽 화살표 → -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
        <inset
            android:insetLeft="130dp"
            android:insetTop="85dp"
            android:insetRight="30dp"
            android:insetBottom="85dp" />
    </item>
    
    <!-- 중앙 원 (빈 공간) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
        </shape>
        <inset
            android:insetLeft="70dp"
            android:insetTop="70dp"
            android:insetRight="70dp"
            android:insetBottom="70dp" />
    </item>
    
</layer-list>
