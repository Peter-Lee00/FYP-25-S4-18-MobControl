<Window x:Class="MobControlDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MobControl Desktop" 
        Height="700"
        Width="900"
        Background="#1E1E1E"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main Menu Screen -->
        <Grid x:Name="MainMenuScreen" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="1" 
                       Text="Mob Control" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,60"/>

            <!-- Buttons Container -->
            <StackPanel Grid.Row="2" 
                        HorizontalAlignment="Center" 
                        Width="300">

                <!-- Host Button -->
                <Button x:Name="HostButton"
                        Content="Host"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        Height="60"
                        Margin="0,0,0,20"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="HostButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66BB6A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Settings Button -->
                <Button x:Name="SettingsButton"
                        Content="Settings"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        Height="60"
                        Margin="0,0,0,20"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SettingsButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#42A5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Exit Button -->
                <Button x:Name="ExitButton"
                        Content="Exit"
                        Background="#757575"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        Height="60"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ExitButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#9E9E9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Dark Mode Toggle -->
            <Button x:Name="DarkModeToggle"
                    Grid.Row="3"
                    Content="🌙 Dark Mode"
                    Background="#424242"
                    Foreground="White"
                    FontSize="12"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,30,30"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="DarkModeToggle_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Host Screen -->
        <Grid x:Name="HostScreen" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - QR Code and Server Info -->
            <Grid Grid.Column="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="120"/>
                </Grid.RowDefinitions>

                <!-- Back Button -->
                <Button Grid.Row="0"
                        x:Name="BackButton"
                        Content="← Back"
                        Background="#424242"
                        Foreground="White"
                        FontSize="14"
                        Width="100"
                        Height="35"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="BackButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Title -->
                <TextBlock Grid.Row="1" 
                           x:Name="HostTitle"
                           Text="Host Server" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- QR Code -->
                <Border Grid.Row="2" 
                        Background="White" 
                        BorderBrush="#4CAF50" 
                        BorderThickness="3"
                        CornerRadius="8"
                        Width="220" 
                        Height="220"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                    <Image x:Name="QRCodeImage" 
                           Stretch="Uniform"
                           Margin="10"/>
                </Border>

                <!-- Pairing Code -->
                <StackPanel Grid.Row="3" 
                            Orientation="Vertical" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">
                    <TextBlock x:Name="PairingCodeLabel"
                               Text="Pairing Code" 
                               FontSize="13" 
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PairingCodeText" 
                               Text="0000" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="#FFEB3B"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- IP Address -->
                <TextBlock Grid.Row="4" 
                           x:Name="IPAddressText"
                           Text="IP: 0.0.0.0:7777" 
                           FontSize="13" 
                           Foreground="#90CAF9"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Status -->
                <Border Grid.Row="5" 
                        x:Name="StatusBorder"
                        Background="#2C2C2C" 
                        BorderBrush="#444444" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12,10"
                        Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" 
                                 Width="11" 
                                 Height="11" 
                                 Fill="#FFC107"
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="StatusText" 
                                   Text="Waiting for connection..." 
                                   FontSize="13" 
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Input Log -->
                <Border Grid.Row="6"
                        x:Name="LogBorder"
                        Background="#2C2C2C" 
                        BorderBrush="#444444" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   x:Name="LogTitle"
                                   Text="Input Log" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,8"/>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="LogText" 
                                       FontSize="10" 
                                       Foreground="#00FF00"
                                       FontFamily="Consolas"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Panel - Connected Users -->
            <Border Grid.Column="1" 
                    x:Name="ConnectedDevicesBorder"
                    Background="#252525" 
                    BorderBrush="#444444" 
                    BorderThickness="1,0,0,0"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock x:Name="ConnectedDevicesTitle"
                                   Text="Connected Devices" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="ConnectionCountText"
                                   Text="0 devices connected" 
                                   FontSize="13" 
                                   Foreground="#AAAAAA"/>
                    </StackPanel>

                    <!-- Connected Users List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ConnectedDevicesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2C2C2C" 
                                            BorderBrush="#444444" 
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Device Name -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding Name}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       Margin="0,0,0,8"/>

                                            <!-- Device IP -->
                                            <TextBlock Grid.Row="1"
                                                       FontSize="12" 
                                                       Foreground="#90CAF9"
                                                       Margin="0,0,0,12">
                                                <Run Text="IP: "/>
                                                <Run Text="{Binding IPAddress}"/>
                                            </TextBlock>

                                            <!-- Connection Status and Disconnect Button -->
                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" 
                                                            Orientation="Horizontal" 
                                                            VerticalAlignment="Center">
                                                    <Ellipse Width="8" 
                                                             Height="8" 
                                                             Fill="#4CAF50"
                                                             Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Status}" 
                                                               FontSize="11" 
                                                               Foreground="#AAAAAA"/>
                                                </StackPanel>

                                                <Button Grid.Column="1"
                                                        Content="Disconnect"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        FontSize="11"
                                                        Padding="12,6"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Tag="{Binding IPAddress}"
                                                        Click="DisconnectDevice_Click">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#EF5350"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Settings Screen -->
        <Grid x:Name="SettingsScreen" Visibility="Collapsed">
            <Border x:Name="SettingsBorder"
                    Background="#2C2C2C" 
                    BorderBrush="#444444" 
                    BorderThickness="1"
                    Margin="40">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               x:Name="SettingsTitle"
                               Text="Settings" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,30"/>

                    <!-- Settings Options -->
                    <StackPanel Grid.Row="1" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center">

                        <!-- Notification Checkboxes -->
                        <CheckBox x:Name="NotifyOnConnect"
                                  Content="Notify me when someone is connected"
                                  FontSize="14"
                                  Foreground="#CCCCCC"
                                  Margin="0,0,0,15"
                                  IsChecked="False"/>

                        <CheckBox x:Name="NotifyOnDisconnect"
                                  Content="Notify me when someone is disconnected"
                                  FontSize="14"
                                  Foreground="#CCCCCC"
                                  Margin="0,0,0,30"
                                  IsChecked="False"/>

                        <!-- Test Network Button -->
                        <Button x:Name="TestNetworkButton"
                                Content="Test Network"
                                Background="#424242"
                                Foreground="White"
                                FontSize="14"
                                Width="200"
                                Height="40"
                                Margin="0,0,0,10"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="TestNetworkButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#616161"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Network Status -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,20">
                            <TextBlock x:Name="NetworkLatencyText"
                                       Text="18 ms"
                                       FontSize="13"
                                       Foreground="#4CAF50"
                                       FontWeight="Bold"
                                       Margin="0,0,10,0"/>
                            <Image x:Name="SignalStrengthIcon"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,5,0"/>
                            <TextBlock x:Name="SignalStrengthText"
                                       Text="Signal Strength: Very Good"
                                       FontSize="13"
                                       Foreground="#4CAF50"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- View Connection Logs Button -->
                        <Button x:Name="ViewConnectionLogsButton"
                                Content="View connection logs"
                                Background="#424242"
                                Foreground="White"
                                FontSize="14"
                                Width="200"
                                Height="40"
                                Margin="0,0,0,10"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ViewConnectionLogsButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#616161"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Edit Controller Mapping Button -->
                        <Button x:Name="EditControllerMappingButton"
                                Content="Edit Controller Mapping"
                                Background="#424242"
                                Foreground="White"
                                FontSize="14"
                                Width="200"
                                Height="40"
                                Margin="0,0,0,10"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="EditControllerMappingButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#616161"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Back Button -->
                    <Button Grid.Row="2"
                            x:Name="SettingsBackButton"
                            Content="Back"
                            Background="#424242"
                            Foreground="White"
                            FontSize="14"
                            Width="150"
                            Height="40"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#616161"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
